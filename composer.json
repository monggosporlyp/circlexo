{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "circlexo/circlexo",
    "type": "project",
    "description": "Open-source project to seamlessly integrate and manage your business workflow, connecting Jira, GitHub, Discord, Stripe, RevenueCat, and OpenAI all in one intuitive platform.",
    "keywords": [
        "laravel",
        "framework",
        "github",
        "data",
        "jira",
        "google",
        "stripe",
        "forge",
        "vapor",
        "discord-bot",
        "kpis",
        "ploi",
        "business-intelligence",
        "revenuecat"
    ],
    "authors": [
        {
            "name": "Fady Mondy",
            "email": "info@3x1.io"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2|^8.3",
        "ext-exif": "*",
        "ext-gd": "*",
        "bezhansalleh/filament-shield": "^3.3",
        "codeat3/blade-phosphor-icons": "^2.3",
        "devdojo/app": "0.11.0",
        "devdojo/auth": "1.0.0",
        "devdojo/themes": "0.0.11",
        "filament/filament": "^3.3",
        "guzzlehttp/guzzle": "^7.9",
        "intervention/image": "^3.0",
        "lab404/laravel-impersonate": "^1.7",
        "laravel/framework": "^12.0",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.10.1",
        "laravel/ui": "^4.6",
        "livewire/flux": "^2.0",
        "livewire/livewire": "^3.6",
        "livewire/volt": "^1.6.7",
        "psr/simple-cache": "^3.0",
        "ralphjsmit/livewire-urls": "^1.5",
        "stripe/stripe-php": "^16.6",
        "thedevdojo/wave": "0.0.1",
        "tomatophp/filament-accounts": "^2.3",
        "tomatophp/filament-language-switcher": "^1.0",
        "tymon/jwt-auth": "^2.2"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.18",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.1",
        "nunomaduro/larastan": "^3.1",
        "orchestra/testbench": "^10.0",
        "pestphp/pest-plugin-drift": "^3.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Wave\\": "wave/src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/src"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "analyse": "vendor/bin/phpstan analyse app database bootstrap resources tests",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "db": "vendor/bin/testbench package:create-sqlite-db && vendor/bin/testbench migrate"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        },
        "merge-plugin": {
            "include": [
                "auth/composer.json",
                "wave/composer.json",
                "tailwind/composer.json"
            ]
        },
        "providers": [
            "Wave\\WaveServiceProvider"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        }
    },
    "repositories": [
        {
            "type": "path",
            "url": "auth"
        },
        {
            "type": "path",
            "url": "wave"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "version": "v0.0.1-beta"
}
